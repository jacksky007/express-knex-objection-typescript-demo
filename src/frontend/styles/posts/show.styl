#posts-show
  padding 16px
  margin 5%
  border 1px solid #aaa

#posts-show h1
  margin 0 0 16px

#posts-show .metadata
  margin-bottom 16px
  padding-bottom 16px
  border-bottom 1px solid #aaa
  font-size 11px

  > span
    margin-left 5px

  .author
    font-weight bold

#posts-show .comments
  padding 10px
  border-top 1px solid #aaa

  .comments-pagination
    display flex
    align-items center
    gap 5px
    line-height 2

    .prev,
    .next
      padding 0 5px
      border 1px solid

    span.prev,
    span.next
      color #aaa
      cursor not-allowed

  .comments-list
    padding 0
    list-style none

    + .empty
      background #fafafa
      line-height 2
      text-align center

  .loading-indicator
    @keyframes loadingIndicator
      from
        background currentColor

      33%
        background transparent

      to
        background transparent

    display flex
    gap 5px
    justify-content center

    i
      width 6px
      height @width
      border 1px solid
      animation loadingIndicator 1.5s infinite
      border-radius 50%
      color #ccc

      for i in 1 .. 3
        &:nth-child({i})
          animation-delay 0.5s * ( i - 1 )
